<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".Home_activity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:background="@drawable/lingkaran"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/menugaris"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/menugaris" />


        <ImageView
            android:id="@+id/imageView3"
            android:paddingTop="20dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/profil"
            android:layout_weight="1"
            android:layout_marginLeft="190dp"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/notif"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Selamat Datang"
        android:textSize="15sp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:text="Shodik"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/hand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nama"
        app:srcCompat="@drawable/hand_hello"
        android:paddingLeft="80dp"
        android:layout_marginTop="-24dp"/>
    <LinearLayout
        android:background="@drawable/splashsaldo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:elevation="15dp"
        android:padding="15dp">
        <RelativeLayout
            android:id="@+id/shap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="3dp"
                android:text="Saldo :"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/jumsaldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/saldo"
                    android:textColor="@color/black"
                    android:text="Rp 100.000"/>
            <TextView
                android:id="@+id/coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/saldo"
                android:paddingRight="3dp"
                android:text="Coin   :"
                android:textStyle="bold"
                android:textColor="@color/black"/>
           <TextView
               android:id="@+id/jumcoin"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:layout_below="@+id/jumsaldo"
               android:layout_toEndOf="@+id/coin"
               android:textColor="@color/black"
               android:text="Rp 20.000"/>

            <ImageView
                android:id="@+id/addsaldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/add_saldo"
                android:layout_alignParentRight="true"
                android:layout_marginRight="70dp"/>
            <TextView
                android:id="@+id/saldotext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:text="Add Saldo"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/addcoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ad_coin"
                android:layout_alignParentRight="true"
                android:layout_marginRight="70dp"
                android:layout_below="@+id/addsaldo" />
            <TextView
                android:id="@+id/cointext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="9dp"
                android:paddingTop="10dp"
                android:layout_below="@+id/saldotext"
                android:text="Add Coin"
                android:textColor="@color/black"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Layanan Kami"
            android:layout_marginBottom="130dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
            <LinearLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="20dp">
                <ImageView
                    android:cropToPadding="true"
                    android:adjustViewBounds="true"
                    android:background="@color/white"
                    android:id="@+id/kiloan"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/m_timbangan"
                    android:elevation="15dp"
                    android:padding="20dp"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textshape"/>

                <RelativeLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>
                <ImageView
                    android:layout_gravity="right"
                    android:padding="20dp"
                    android:background="@color/white"
                    android:backgroundTint="@color/white"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:src="@drawable/m_dreees"
                    android:elevation="15dp"/>
                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:background="@color/white"
                    android:padding="20dp"
                    android:id="@+id/imageView5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/m_vip"
                    android:elevation="15dp" />
            </LinearLayout>



    </LinearLayout>




</RelativeLayout>